storage "raft" {
  path    = "/opt/vault/data"
  node_id = "{{ inventory_hostname_short }}"
}
listener "tcp" {
  address     = "0.0.0.0:8200"
  cluster_address     = "0.0.0.0:8201"
  tls_disable = true
}
seal "awskms" {
  kms_key_id = "{{ kms }}"
  region = "us-east-1"
}
api_addr = "http://{{ ansible_host }}:8200"
cluster_addr = "http://{{ ansible_eth0.ipv4.address }}:8201"
disable_mlock = true
ui=true
